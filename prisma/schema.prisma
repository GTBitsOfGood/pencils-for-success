generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int         @id @default(autoincrement())
  username   String
  hash       String
  chapters   Chapter[]
  admins     Admin[]
  recipients Recipient[]
}

model Chapter {
  id          Int     @unique @default(autoincrement())
  name        String  @unique
  email       String
  phoneNumber String?
  userId      Int
  user        User    @relation(fields: [userId], references: [id])
}

model Admin {
  id     Int  @unique @default(autoincrement())
  userId Int
  user   User @relation(fields: [userId], references: [id])
}

model Recipient {
  id     Int  @unique @default(autoincrement())
  userId Int
  user   User @relation(fields: [userId], references: [id])
}
